<!-- res/layout/activity_main.xml -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="16dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.material.chip.ChipGroup
        android:id="@+id/modeChips"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:singleSelection="true"
        app:selectionRequired="true">

        <com.google.android.material.chip.Chip
            android:id="@+id/chipGuitar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ギター"
            style="@style/Widget.Material3.Chip.Filter" />

        <com.google.android.material.chip.Chip
            android:id="@+id/chipBass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ベース"
            style="@style/Widget.Material3.Chip.Filter" />

        <com.google.android.material.chip.Chip
            android:id="@+id/chipUkulele"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ウクレレ"
            style="@style/Widget.Material3.Chip.Filter" />

        <com.google.android.material.chip.Chip
            android:id="@+id/chipViolin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="バイオリン"
            style="@style/Widget.Material3.Chip.Filter" />
    </com.google.android.material.chip.ChipGroup>

    <TextView
        android:id="@+id/textNote"
        android:text="--"
        android:textSize="48sp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="12dp" />

    <TextView
        android:id="@+id/textFreq"
        android:text="0.00 Hz"
        android:textSize="18sp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <tk.horiuchi.smarttuner.ui.NeedleView
        android:id="@+id/needle"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:layout_marginTop="8dp" />

    <LinearLayout
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp">

        <TextView
            android:text="A4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp" />

        <SeekBar
            android:id="@+id/seekA4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:max="100" />

        <TextView
            android:id="@+id/textA4"
            android:text="440Hz"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/stringButtons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="8dp" />

    <SeekBar
        android:id="@+id/seekToneVol"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:max="100"
        android:layout_marginTop="4dp" />
</LinearLayout>
